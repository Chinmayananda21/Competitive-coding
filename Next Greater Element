#include <stdio.h>
#include <stdlib.h>

#define MAX 100
void nextgearterElement(int arr[],int n){
    int stack[MAX];
    int top= -1;
    
    for (int i=n-1; >=0: i--){
        while (top ! =-1 && stack [top]<=arr [i]){
            top--;
        }
    {
         if (top!= -1) {
         printf("Next Greater Element for%d is %d\n",arr[i],stack[top]);
        }else{
            printf ("Next Greater Element for %d is none \n",arr[i]);
            
        }
    }
int main(){
    int arr[] = {4,5,2,10,8};
         int n= sizeof(arr)/sizeof(arr[0]);
    }
         
    }
    
